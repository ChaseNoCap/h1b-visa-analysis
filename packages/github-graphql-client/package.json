{
  "name": "@chasenocap/github-graphql-client",
  "version": "1.0.0",
  "description": "Smart GitHub API client with GraphQL/REST routing, caching, and rate limiting",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "github",
    "graphql",
    "rest",
    "api-client",
    "rate-limiting",
    "caching",
    "webhook",
    "typescript",
    "inversify"
  ],
  "author": "ChaseNoCap",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChaseNoCap/github-graphql-client.git"
  },
  "bugs": {
    "url": "https://github.com/ChaseNoCap/github-graphql-client/issues"
  },
  "homepage": "https://github.com/ChaseNoCap/github-graphql-client#readme",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE",
    "CLAUDE.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@chasenocap/cache": "^1.0.0",
    "@chasenocap/logger": "^1.0.0",
    "@octokit/core": "^6.1.2",
    "@octokit/graphql": "^8.1.1",
    "@octokit/rest": "^21.0.2",
    "@octokit/types": "^13.6.1",
    "@octokit/webhooks": "^13.4.0",
    "inversify": "^6.0.2",
    "reflect-metadata": "^0.2.1"
  },
  "devDependencies": {
    "@chasenocap/test-helpers": "^0.1.0",
    "@chasenocap/test-mocks": "^0.1.0",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}